<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/Linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center">

        <Button
            android:id="@+id/prevImageBtn"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical|left"
            android:background="@drawable/left"
            android:layout_weight="1"
            />

        <ImageView  xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="400dp"
            android:layout_weight="10"
            />

        <Button
            android:id="@+id/nextImageBtn"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@drawable/right"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/Linearlayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/Linearlayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textAlignment="center"
                android:id="@+id/txtTemperature" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textAlignment="center"
                android:id="@+id/txtHumidity" />
        </LinearLayout>

        <Button
            android:id="@+id/takePicBtn"
            android:background="@drawable/burst"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"/>

        <!--<Button
            android:id="@+id/burstBtn"
            android:background="@drawable/burst"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"/>-->
        <Button
            android:id="@+id/saveBtn"
            android:background="@drawable/save"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:layout_gravity="center_vertical|right"
            android:layout_margin="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/motionBtn"
            android:background="@drawable/motion"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:layout_gravity="center_vertical|right"
            android:layout_margin="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/moveLeftBtn"
            android:background="@drawable/left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:layout_weight="1"/>

        <Button
            android:id="@+id/moveCenterBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Center"
            android:layout_weight="4"/>

        <Button
            android:id="@+id/moveRightBtn"
            android:background="@drawable/right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>
